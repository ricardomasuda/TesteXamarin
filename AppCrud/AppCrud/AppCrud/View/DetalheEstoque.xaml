<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCrud.View.DetalheEstoque"
             Title="Detalhe Estoque"
               BackgroundColor="#F5F6FA"
             >
    <ContentPage.Content>
        <Frame
            Margin="10"
            >
            <StackLayout>
                <StackLayout >
                    <Label Text="Nome:" TextColor="Black" FontSize="12"/>
                    <Entry BackgroundColor="LightGray" Text="{Binding Estoque.Nome}" />
                </StackLayout>
                <StackLayout>
                    <Label Text="Quantidade:" TextColor="Black" FontSize="12"/>
                    <Entry BackgroundColor="LightGray" Keyboard="Numeric" Text="{Binding Estoque.Quantidade}"/>
                </StackLayout>
                <Button
                    Margin="0,20,0,10"
                    Text="Salvar"
                    BackgroundColor="#6ed1e4"
                    Command="{Binding SalvarCmd}"
                    />
                <Button
                    Margin="0,20,0,10"
                    BackgroundColor="#6ed1e4"
                    Text="Apagar"
                    IsVisible="{Binding ViewBotao}"
                    Command="{Binding DeleterCmd}"
                    />
            </StackLayout>
        </Frame>

    </ContentPage.Content>
</ContentPage>