<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               BackgroundColor="#F5F6FA"
             x:Class="AppCrud.View.ListarEstoque">
    <ContentPage.Content>
        <StackLayout
             Margin="10">
            <Button
                CornerRadius="5"
                BackgroundColor="Aquamarine"
                Text="+ CADASTRAR"
                Command="{Binding Cadastrar}"
                />
            <Frame
                CornerRadius="5"
                >
                <Label TextColor="Black" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" >
                    <Label.FormattedText >
                        <FormattedString >
                            <Span Text="4x"/>
                            <Span Text=" Camisa" />
                            <Span Text=" Data: 16/11/2021" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>